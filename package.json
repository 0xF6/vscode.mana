{
	"name": "devkit",
	"publisher": "veinlang",
	"preview": true,
	"displayName": "Vein Language",
	"description": "Development Kit for Vein Language",
	"version": "0.9.1400",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#eff1f3",
		"theme": "light"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/vein-lang/vscode-extension/issues"
	},
	"homepage": "https://github.com/vein-lang/vein",
	"repository": {
		"type": "git",
		"url": "https://github.com/vein-lang/vscode-extension.git"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"virtual-machine",
		"cli",
		"intermediate-language",
		"il",
		"language"
	],
	"activationEvents": [
		"onLanguage:Vein Lang",
		"onLanguage:vein",
		"onLanguage:lay",
		"onCommand:extension.target.create",
		"onCommand:extension.target.select",
		"onCommand:extension.target.run",
		"onCommand:extension.target.build",
		"onCommand:editor.action.vein-lang.status"
	],
	"configuration": {
		"type": "object",
		"title": "VeinLang extensions configuration",
		"properties": {
			"vein-language.languageServerPath": {
				"scope": "machine",
				"type": [
					"string",
					"null"
				],
				"description": "Path to the language server assembly for vein.",
				"default": null
			},
			"vein-language.languageServer.disabled": {
				"scope": "machine",
				"description": "Is disable Vein Lang server?",
				"type": "boolean",
				"default": true
			}
		}
	},
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "Vein Lang",
				"aliases": [
					"Vein Lang"
				],
				"extensions": [
					".vein"
				],
				"configuration": "./vein.configuration.json"
			},
			{
				"id": "lay",
				"aliases": [
					"Intermediate Language"
				],
				"extensions": [
					".lay",
					".vein.il"
				],
				"configuration": "./lay.configuration.json"
			},
			{
				"id": "yaml",
				"aliases": [
					"YAML"
				],
				"extensions": [
					".vproj"
				]
			}
		],
		"grammars": [
			{
				"language": "Vein Lang",
				"scopeName": "source.vein",
				"path": "./syntaxes/vein/grammars/vein.tmLanguage"
			},
			{
				"language": "lay",
				"scopeName": "source.vein.il",
				"path": "./syntaxes/lay.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "editor.action.vein-lang.status",
				"title": "Get status of VeinLang extensions."
			}
		]
	},
	"scripts": {
		"build": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test",
		"watch": "tsc -watch -p ./",
		"pre-publish": "vsce package"
	},
	"dependencies": {
		"@types/fs-extra": "^8.0.0",
		"decompress-zip": "^0.2.2",
		"fs-extra": "^8.1.0",
		"lodash": "^4.17.21",
		"portfinder": "1.0.13",
		"request": "^2.88.0",
		"semver": "^6.0.0",
		"tmp": "0.0.33",
		"ts-optchain": "^0.1.7",
		"vscode-extension-telemetry": "0.0.18",
		"vscode-languageclient": "7.0.0",
		"which": "1.3.1",
		"yosay": "^2.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^16.0.0",
		"@types/request": "^2.48.3",
		"@types/semver": "^6.0.0",
		"@types/tmp": "0.0.33",
		"@types/vscode": "^1.52.0",
		"@types/which": "1.3.1",
		"@types/yosay": "0.0.29",
		"mocha": "^8.2.1",
		"tslint": "^5.8.0",
		"typescript": "^4.1.3",
		"vsce": "^1.81.1"
	}
}
