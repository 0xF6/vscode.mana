{
	"name": "wave-language",
	"displayName": "Wave Language",
	"description": "Wave developmemnt environment",
	"version": "0.4.1326",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#18c7b1",
		"theme": "dark"
	},
	"publisher": "rijndael",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/0xF6/wave_vm/issues"
	},
	"homepage": "https://github.com/0xF6/wave_vm/",
	"repository": {
		"type": "git",
		"url": "https://github.com/0xF6/wave_vm.git"
	},
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"virtual-machine",
		"cli",
		"intermediate-language",
		"il",
		"language"
	],
	"activationEvents": [
		"onLanguage:wave",
		"onCommand:extension.target.create",
		"onCommand:extension.target.select",
		"onCommand:extension.target.run",
		"onCommand:extension.target.build"
	],
	"main": "./out/src/extension",
	"contributes": {
		"languages": [
			{
				"id": "wave",
				"aliases": [
					"wave"
				],
				"extensions": [
					".wave"
				],
				"configuration": "./wave.configuration.json"
			},
			{
				"id": "wvil",
				"aliases": [
					"wvil"
				],
				"extensions": [
					".wvil"
				],
				"configuration": "./wvil.configuration.json"
			}
		],
		"grammars": [
			{
				"language": "wave",
				"scopeName": "source.wave",
				"path": "./syntaxes/wave.tmLanguage"
			},
			{
				"language": "wvil",
				"scopeName": "source.wave.il",
				"path": "./syntaxes/wvil.tmLanguage"
			}
		],
		"commands": [
			{
			  "command": "editor.action.shutdownWaveLSP",
			  "title": "Stop Wave LSP"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/node": "^15.0.2",
		"decache": "^4.6.0",
		"glob": "^7.1.7",
		"typescript": "^4.2.4",
		"vscode": "^1.1.37"
	},
	"dependencies": {
		"esm": "^3.2.25",
		"remap-istanbul": "^0.13.0",
		"vscode-jsonrpc": "^6.0.0",
		"vscode-languageclient": "^7.0.0"
	}
}
