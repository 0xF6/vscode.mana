{
	"name": "mana-language",
	"displayName": "Mana Language",
	"description": "Mana developmemnt environment",
	"version": "0.6.1326",
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#18c7b1",
		"theme": "dark"
	},
	"publisher": "rijndael",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/0xF6/mana_lang/issues"
	},
	"homepage": "https://github.com/0xF6/mana_lang/",
	"repository": {
		"type": "git",
		"url": "https://github.com/0xF6/mana_lang.git"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"virtual-machine",
		"cli",
		"intermediate-language",
		"il",
		"language"
	],
	"activationEvents": [
		"onLanguage:mana",
		"onLanguage:lay",
		"onCommand:extension.target.create",
		"onCommand:extension.target.select",
		"onCommand:extension.target.run",
		"onCommand:extension.target.build"
	],
	"configuration": {
		"type": "object",
		"title": "Mana language server configuration",
		"properties": {
			"manaDevKit.languageServerPath": {
				"scope": "machine",
				"type": [
					"string",
					"null"
				],
				"description": "Path to the language server assembly for Mana.",
				"default": null
			}
		}
	},
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "mana",
				"aliases": [
					"Mana",
					"mana"
				],
				"extensions": [
					".mana"
				],
				"configuration": "./mana.configuration.json"
			},
			{
				"id": "lay",
				"aliases": [
					"Lay",
					"lay",
					"mil"
				],
				"extensions": [
					".lay",
					".mana.il"
				],
				"configuration": "./lay.configuration.json"
			},
			{
				"id": "xml",
				"aliases": [
					"waproj"
				],
				"extensions": [
					".waproj"
				]
			}
		],
		"grammars": [
			{
				"language": "mana",
				"scopeName": "source.mana",
				"path": "./syntaxes/mana.tmLanguage"
			},
			{
				"language": "lay",
				"scopeName": "source.mana.il",
				"path": "./syntaxes/lay.tmLanguage"
			}
		],
		"commands": [
			{
				"command": "editor.action.shutdownManaLSP",
				"title": "Stop Mana LSP"
			}
		]
	},
	"scripts": {
		"build": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"test": "node ./node_modules/vscode/bin/test",
		"watch": "tsc -watch -p ./"
	},
	"dependencies": {
		"@types/fs-extra": "^8.0.0",
		"decompress-zip": "^0.2.2",
		"fs-extra": "^8.1.0",
		"lodash": "^4.17.21",
		"portfinder": "1.0.13",
		"request": "^2.88.0",
		"semver": "^6.0.0",
		"tmp": "0.0.33",
		"ts-optchain": "^0.1.7",
		"vscode-extension-telemetry": "0.0.18",
		"vscode-languageclient": "7.0.0",
		"which": "1.3.1",
		"yosay": "^2.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^16.0.0",
		"@types/request": "^2.48.3",
		"@types/semver": "^6.0.0",
		"@types/tmp": "0.0.33",
		"@types/vscode": "^1.52.0",
		"@types/which": "1.3.1",
		"@types/yosay": "0.0.29",
		"mocha": "^8.2.1",
		"tslint": "^5.8.0",
		"typescript": "^4.1.3",
		"vsce": "^1.81.1"
	}
}
